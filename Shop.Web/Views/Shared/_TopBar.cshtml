
<div class="row" style="width:77%; margin:auto;">
    <div class="col-md-4" style="height:90px;">
        <h3>Księgarnia internetowa</h3>
        <h5>Nasze sklepy prowadzimy z pasją!</h5>
    </div>

    <div class="col-lg-4" style="margin:auto; height: 90px; min-width:395px;">
        <div style="float:left; margin-top: 35px;">
            <div style="float:right; margin-right:5px;">Wyszukiwarka</div>
        </div>
        @using (Ajax.BeginForm("SearchGetResourcesData", new AjaxOptions()
        {
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            LoadingElementId = "loadingPanel",
            UpdateTargetId = "dataView"
        }))
        {
        <div style="margin-top: 30px; text-align:left; float:left;">
            <div class="right-inner-addon">
                <i class="glyphicon glyphicon-search"></i>
                @Html.TextBox("word", "", new { @class = "form-control", style =" text-align:right;"})
            </div>
        </div>
        <div style="float:left; margin-top: 30px; margin-left:5px;  ">
            <div style="float:right;"><input type="submit" class="btn btn-default" value="Szukaj" /></div>
        </div>
        }
    </div>

    <div class="col-md-2" style="margin:auto; height: 90px; text-align:right;">
        <div style="float:right; margin-top: 35px;">
            @Ajax.ActionLink("Twój koszyk", "MyCart", "Cart", new { category = 1 }, new AjaxOptions() { InsertionMode = InsertionMode.Replace, HttpMethod = "GET", LoadingElementId = "loadingPanel", UpdateTargetId = "dataView" })      
        </div>
    </div>
    <div class="col-md-2" style="margin:auto; height: 90px; text-align:right;">
        <div style="float:right; margin-top: 30px; padding: 5px; border: solid 1px; text-align:right;">
            <div style="float:left; padding-left:5px;">Liczba produktów: </div>
            <div style="float:right;" id="counterResources">0</div>
        </div>
    </div>
</div>
